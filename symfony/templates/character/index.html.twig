{% extends 'base.html.twig' %}

{% block title %} Character {% endblock %}

{% block body %}
<style>
.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Character</h1>

    {% if characters|length > 0 %}
    <table id="myTable">
        <thead>
            <th>Name</th>
            <th>Gender</th>
            <th>Specie</th>
            <th>Action</th>
            <th>Films</th>
        </thead>

        {% for character in characters %}
        <tr>
            <td>{{ character.name }} </td>
            <td>{{ character.gender }} </td>
            {% if character.specie is null %}
            <td></td>
            {% else %}
            <td>{{ character.specie.name }} </td>
            {% endif %}
            <td><a href="{{ path('character_show', {'id': character.id}) }}">Show</a></td>
            <td>
                {% for film in character.films %}
                <p><a href="{{ path('film_show', {'id': film.id}) }}">{{ film.title }}</a></p>
                {% endfor %}
            </td>

        </tr>
        {% endfor %}
    </table>
    {% else %}
    <p>There are no Character yet</p>
    {% endif %}
</div>
{% endblock %}
