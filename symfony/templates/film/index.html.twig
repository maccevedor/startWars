{% extends 'base.html.twig' %}

{% block title %} Films {% endblock %}

{% block body %}
<style>
.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Films</h1>

    {% if films|length > 0 %}
    <table id="myTable">
        <thead>
            <th>Director</th>
            <th>Tittle</th>
            <th>Realease</th>
            <th>Action</th>
        </thead>
        {% for film in films %}
        <tr>
            <td>{{ film.director }} </td>
            <td>{{ film.title }} </td>
            <td>{{ film.releaseDate|date('d-m-Y')  }} </td>
            <td><a href="{{ path('film_show', {'id': film.id}) }}">Show</a></td>
        </tr>
        {% endfor %}
    </table>
    {% else %}
    <p>There are no films yet</p>
    {% endif %}
</div>
{% endblock %}
